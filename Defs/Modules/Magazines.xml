<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- PLA弹鼓 -->
  <ThingDef ParentName="CWF_Module">
    <defName>PLA_Module_Magazine</defName>
    <label>PLA Drum magazine</label>
    <graphicData>
      <texPath>CustomizeWeapon/Module/Magazine/EightOne</texPath>
    </graphicData>
    <statBases>
      <WorkToMake>1500</WorkToMake>
    </statBases>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>PLA_Research_TacticalModification</researchPrerequisite>
    </recipeMaker>
    <modExtensions>
      <li Class="CWF.TraitModuleExtension">
        <weaponTraitDef>PLA_Trait_Magazine</weaponTraitDef>
        <part>Magazine</part>
        <requiredWeaponTags>
          <li>PLA_QBZOneNineOne</li>
          <li>PLA_QBATwoTwoOne</li>
          <li>PLA_QBSZeroNine</li>
        </requiredWeaponTags>
        <graphicCases>
          <li>
            <matcher>
              <weaponDefs>
                <li>PLA_QBZOneNineOne</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Module/Magazine/PLA_Magazine</texturePath>
              <outlinePath>CustomizeWeapon/Module/Magazine/PLA_Magazine_o</outlinePath>
              <offset>(128, 55)</offset>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>PLA_QBATwoTwoOne</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Module/Magazine/PLA_MagazineA</texturePath>
              <outlinePath>CustomizeWeapon/Module/Magazine/PLA_MagazineA_o</outlinePath>
              <offset>(145, 70)</offset>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>PLA_QBSZeroNine</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Weapons/CQB/PLA_QBATwoTwoOne/Magazine</texturePath>
              <outlinePath>CustomizeWeapon/Weapons/CQB/PLA_QBATwoTwoOne/Magazine_o</outlinePath>
              <offset>(136, 51)</offset>
            </graphicData>
          </li>
        </graphicCases>
      </li>
    </modExtensions>
  </ThingDef>

