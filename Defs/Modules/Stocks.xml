<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- PLA伸缩枪托 -->
  <ThingDef ParentName="CWF_Module">
    <defName>PLA_Module_Stock</defName>
    <label>Telescopic stock</label>
    <graphicData>
      <texPath>CustomizeWeapon/Module/Stock/EightOne</texPath>
    </graphicData>
    <statBases>
      <WorkToMake>1500</WorkToMake>
    </statBases>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>PLA_Research_TacticalModification</researchPrerequisite>
    </recipeMaker>
    <modExtensions>
      <li Class="CWF.TraitModuleExtension">
        <weaponTraitDef>PLA_Trait_Stock</weaponTraitDef>
        <part>Stock</part>
       <requiredWeaponTags>
       <li>PLA_QBZOneNineOne</li>
       <li>PLA_QBSZeroNine</li>
       <li>PLA_QBUTwoZeroTwo</li>
       <li>PLA_QJYTwoZeroOneE</li>
       </requiredWeaponTags>
        <graphicCases>
          <li>
            <matcher>
              <weaponDefs>
                <li>PLA_QBZOneNineOne</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Module/Stock/PLA_Stock</texturePath>
              <outlinePath>CustomizeWeapon/Module/Stock/PLA_Stock_o</outlinePath>
              <offset>(-57, 106)</offset>
            </graphicData>
          </li> 
        </graphicCases>
      </li> 
    </modExtensions>
  </ThingDef>

