        <weaponTraitDef>PLA_Trait_StockA</weaponTraitDef>
        <part>Stock</part>
       <requiredWeaponTags>
       <li>PLA_QBATwoTwoOne</li>
       <li>PLA_QLUEleven</li>
       <li>PLA_QBSZeroNine</li>
       <li>PLA_QBUTwoZeroTwo</li>
